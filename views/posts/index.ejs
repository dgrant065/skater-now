<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        
        <th>Posts</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(function(p) { %>
        <tr>
          <td><%= p.title %></td>
          <td><%= p.content %></td>
          <td><a href="/posts/<%= p._id %>/edit">EDIT</a></td>
          <td>
              <form id="comment-form" action="/posts/<%= p._id %>/comment" method="POST">
                  <input type="text" name="content"></input>
                  <button type="submit">Submit</button>
              </form>
            <% p.comments.forEach(comment => { %>
                <p><%= comment.content %></p>
                <form id="delete-form" action="/posts/<%= p._id %>/comment/<%= comment._id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
           <% });  %>

          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>



<%- include('../partials/footer') %>